    CALL "%~dp0\_DEBUG"
    CALL "%~dp0\_Getopt" %*&IF ERRORLEVEL 1 EXIT /B 1

ENDLOCAL

:MAIN
    FOR /F %%A IN ('(set %~1 ^) 2^>^&1 ^| find /C "="') DO CALL _Action "- Removing vars [%~1]: %%A"
    CALL :RemoveVarByType %~1
    SET %~1>NUL 2>&1
    IF ERRORLEVEL 1 (
        CALL _Status "Done"
        EXIT /B 0
    )
    CALL _Status "Failure"
    ECHO Ooops! Still vars in environment:
    SET %~1
    EXIT /B 1
GOTO :EOF

:RemoveVarByType
    FOR /F "usebackq delims==" %%C IN (`SET %~1 2^>nul`) DO (
        REM ECHO Removing [%%C]
        IF DEFINED %%C SET %%C=
    )
GOTO :EOF 

